<Window x:Class="TCPChatroomClient.UsernameSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCPChatroomClient"
        mc:Ignorable="d"
        Title="UsernameSelectWindow"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        Height="150" Width="300">
    <Grid>
        <Label Content="Username:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,47,0,0"></Label>
        <TextBox Name="UsernameText" Height="20" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="130,50,0,0"></TextBox>

        <Button Name="JoinBtn" Content="Join" Height="20" Width="265" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,5,30"></Button>
    </Grid>
</Window>
