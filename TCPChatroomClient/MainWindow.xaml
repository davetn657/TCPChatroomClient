<Window x:Class="TCPChatroomClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCPChatroomClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="460" Width="610"
        >
    <Grid HorizontalAlignment="Center" Width="610">
        <TextBox Name="ConnectedUsers" Height="380" Width="160" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="12,20,0,0"></TextBox>
        <Button Name="ConnectBtn" Content="Connect" Height="20" Width="160" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="12,0,0,15" Click="ConnectBtn_Click"></Button>

        <TextBox Name="ChatLog" Height="380" Width="400" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,20,22,0"></TextBox>
        <TextBox Name="MessageBox" Height="20" Width="310" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="188,0,0,15"></TextBox>
        <Button Name="SendBtn" Content="Send" Height="20" Width="80" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,22,15" Click="SendBtn_Click"></Button>
    </Grid>
</Window>
