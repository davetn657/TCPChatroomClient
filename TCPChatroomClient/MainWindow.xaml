<Window x:Class="TCPChatroomClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCPChatroomClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Grid>
        <TextBox Name="ConnectedUsers" Height="380" Width="160" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0"></TextBox>
        <Button Name="ConnectBtn" Content="Connect" Height="20" Width="160" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,0,10" Click="ConnectBtn_Click"></Button>
        
        
        <Grid Name="ChatGrid" Height="434" Width="434" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="172,0,0,0">
            <TextBox Name="ChatLog" Height="380" Width="400" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,30"></TextBox>
            <TextBox Name="MessageBox" Height="20" Width="310" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="24,0,0,10"></TextBox>
            <Button Name="SendBtn" Content="Send" Height="20" Width="80" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,10"></Button>
        </Grid>



    </Grid>
</Window>
