<Window x:Class="TCPChatroomClient.ServerConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCPChatroomClient"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        Title="ServerConnectWindow" Height="150" Width="300">
    <Grid>
        <Label Content="Host IP Address:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,27,0,0"></Label>
        <TextBox Name="IpText" Height="20" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="130,30,0,0"></TextBox>

        <Label Content="Port:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,57,0,0"></Label>
        <TextBox Name="PortText" Height="20" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="130,60,0,0"></TextBox>

        <Button Name="ConnectBtn" Content="Connect" Height="20" Width="265" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,5,30" Click="ConnectBtn_Click"></Button>
    </Grid>
</Window>
